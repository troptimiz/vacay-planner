<div class="edit-form-container">
    <div class="row">
        <div class="col-md-12">
            <div class="item-container">
                <div class="data-form">
                    <div class="form-heading">
                        <h2>Update Classification</h2>
                    </div>									

                    <form role="form" method="post"  id="edit-classification-form">
                        <input type="hidden" value="{{classification.id}}" name="id" />
                        <input type="hidden" value="{{classification.imageUrl}}" name="prevImgUrl"/>
                        <div class="form-group">
                            <label for="">Name:</label>
                            <input type="textbox" value="{{classification.name}}"name="name" class="form-control required" placeholder="Name">
                            <div class="clearfix"></div>
                        </div>
                        <div class="form-group">
                            <label for="">Description:</label>
                            <textarea value="{{classification.description}}" name="description" class="form-control required" placeholder="Description">{{classification.description}}</textarea>
                            <div class="clearfix"></div>
                        </div>
                        <div class="form-group">
                            <label for="">Activate:</label>
                            <select name="isActive" class="required">
                                <option value="true">True</option>
                                <option value="false">False</option>
                            </select>
                            <div class="clearfix"></div>
                        </div>
                        <button type="button" class="btn btn-default" id="edit-classification">Submit</button>
                        <a href="/classifications/all" title="Cancel" class="btn btn-default">Cancel</a>
                        
                    </form>
                    
                    
                </div>                
            </div>
        </div>
    </div>
</div>
