<div class="edit-form-container">
    <div class="row">
        <div class="col-md-12">
            <div class="item-container">
                <div class="data-form">
                    <div class="form-heading">
                        <h2>Add New Image</h2>
                    </div>
                    
                    <form role="form" method="post" enctype="multipart/form-data" action="/products/{{productId}}/{{dest}}/image" id="add-image-form">
                        <input type="hidden" name="id" value="{{productId}}"/>
                        <div class="form-group">
                            <label for="">Select Image:</label>
                            <input id="imageUrl" type="file" accept="image/*" name="imageUrl" class="form-control required" placeholder="Select Image">
                            <div class="clearfix"></div>
                        </div>
                        
                        <div class="form-group">
                            <label for="">Caption Text:</label>
                            <input type="textbox" name="caption" class="form-control required" placeholder="Caption">
                            <div class="clearfix"></div>
                        </div>
                        
                        <div class="form-group">
                            <label for="">Title Text:</label>
                            <input type="textbox" name="title" class="form-control required" placeholder="Title">
                            <div class="clearfix"></div>
                        </div>
                        
                        <div class="form-group">
                            <label for="">Sort Order:</label>
                            <input type="textbox" name="sort_order" class="form-control required number" placeholder="Sort Order">
                            <div class="clearfix"></div>
                        </div>
                        <div class="image-preview product">                            
                            
                        </div> 
                        
                        
                        <button type="button" class="btn btn-default" id="add-image">Submit</button>
                        <a href="/products/product/{{productId}}" title="Cancel" class="btn btn-default">Cancel</a>
                     </form>
                </div>                
            </div>
        </div>
    </div>
</div>
