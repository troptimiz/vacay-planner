<div class="edit-form-container">
    <div class="row">
        <div class="col-md-12">
            <div class="item-container">
                <div class="data-form">
                    <div class="form-heading">
                        <h2>Update Address</h2>
                    </div>
                    <form role="form" id="update-address-form">
                        <input type="hidden" name="id" value="{{productId}}"/>
                        <input type="hidden" name="addressId" value="{{productAddress._id}}"/>
                        
                        <div class="form-group">
                            <label for="">Address Line1:</label>
                            <input type="textbox" name="address1" value="{{productAddress.address1}}" class="form-control required" placeholder="Address1">
                            <div class="clearfix"></div>
                        </div>
                        
                        <div class="form-group">
                            <label for="">Address Line2:</label>
                            <input type="textbox" name="address2" value="{{productAddress.address2}}" class="form-control" placeholder="Address2">
                            <div class="clearfix"></div>
                        </div>
                        
                        <div class="form-group">
                            <label for="">City:</label>
                            <input type="textbox" name="city" value="{{productAddress.city}}" class="form-control required" placeholder="City">
                            <div class="clearfix"></div>
                        </div>
                        
                        <div class="form-group">
                            <label for="">State:</label>
                            <input type="textbox" name="state" value="{{productAddress.state}}" class="form-control required" placeholder="State">
                            <div class="clearfix"></div>
                        </div>
                        
                        <div class="form-group">
                            <label for="">Postal Code:</label>
                            <input type="textbox" name="postalCode" value="{{productAddress.postalCode}}" class="form-control required number" placeholder="Postal Code">
                            <div class="clearfix"></div>
                        </div>
                        
                        <button type="button" class="btn btn-default" id="update-address">Submit</button>
                        <a href="/products/product/{{productId}}" title="Cancel" class="btn btn-default">Cancel</a>
                     </form>
                </div>                
            </div>
        </div>
    </div>
</div>
