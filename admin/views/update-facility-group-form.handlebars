<div class="edit-form-container">
    <div class="row">
        <div class="col-md-12">
            <div class="item-container">
                <div class="data-form">
                    <div class="form-heading">
                        <h2>Update Facility Group</h2>
                    </div>

                    <form role="form" id="edit-facility-group-form">
                        <input type="hidden" name="id" value="{{facilityById._id}}"/>
                        <div class="form-group">
                            <label for="">Facility Group Title:</label>
                            <input type="textbox" name="facilityGroupTitle" class="form-control required" value="{{facilityById.title}}" placeholder="Facility Type"/>
                            <div class="clearfix"></div>
                        </div>
                        <div class="form-group">
                            <label for="">Facility Group Description:</label>
                            <input type="textbox" name="facilityGroupDescription" class="form-control required" value="{{facilityById.description}}"placeholder="Facility Description"/>
                            <div class="clearfix"></div>
                        </div>
                        <div class="form-group">
                            <label for="">Activate:</label>
                            <select name="isActive" class="required form-control">
                                <option selected="selected" value="true">True</option>
                                <option value="false">False</option>
                            </select>
                            <div class="clearfix"></div>
                        </div>
                        <button type="button" class="btn btn-default" id="edit-facility">Submit</button>
                        <a href="/facilities/all" title="Cancel" class="btn btn-default">Cancel</a>
                     </form>                    
                    
                </div>
            </div>
        </div>
    </div>
</div>
