<div class="edit-form-container">
    <div class="row">
        <div class="col-md-12">
            <div class="item-container">
                <div class="data-form">
                    <div class="form-heading">
                        <h2>Add New Facility Group</h2>
                    </div>

                    <form role="form" id="add-facility-group-form">                        
                        <div class="form-group">
                            <label for="">Facility Group Title:</label>
                            <input type="textbox" name="facilityGroupTitle" class="form-control required" placeholder="Facility Type"/>
                            <div class="clearfix"></div>
                        </div>
                        <div class="form-group">
                            <label for="">Facility Group Description:</label>
                            <input type="textbox" name="facilityGroupDescription" class="form-control required" placeholder="Facility Description"/>
                            <div class="clearfix"></div>
                        </div>

                        <button type="button" class="btn btn-default" id="add-facility-group">Submit</button>
                        <a href="/products/product/{{productId}}" title="Cancel" class="btn btn-default">Cancel</a>
                     </form>
                </div>
            </div>
        </div>
    </div>
</div>
