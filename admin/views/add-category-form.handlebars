<div class="edit-form-container">
    <div class="row">
        <div class="col-md-12">
            <div class="item-container">
                <div class="data-form">
                    <div class="form-heading">
                        <h2>Update Category</h2>
                    </div>
                    <form role="form" method="post" enctype="multipart/form-data" action="/categories/category/{{category.id}}" id="edit-category-form">
                        <input type="hidden" value="{{category.id}}" name="id" />
                        <input type="hidden" value="{{category.imageUrl}}" name="prevImgUrl"/>
                        <div class="form-group">
                            <label for="">Name:</label>
                            <input type="textbox" value="{{category.name}}"name="name" class="form-control required" placeholder="Name">
                            <div class="clearfix"></div>
                        </div>
                        <div class="form-group">
                            <label for="">Description:</label>
                            <input type="textbox" value="{{category.description}}" name="description" class="form-control required" placeholder="Description">
                            <div class="clearfix"></div>
                        </div>
                        <div class="form-group">
                            <label for="">Short Description:</label>
                            <input type="textbox" value="{{category.short_desc}}" name="short_desc" class="form-control required" placeholder="Description">
                            <div class="clearfix"></div>
                        </div>
                        <div class="form-group">
                            <label for="">Image URL:</label>
                            <input type="file" accept="image/*"  name="imageUrl" id="imageUrl" class="form-control" placeholder="Image URL">
                            <input type="hidden" value="{{category.imageUrl}}" name="imgUrl" id="imgUrl"/>
                            <div class="clearfix"></div>
                        </div>
                        
                        <div class="form-group">
                            <label for="">Activate:</label>
                            <select name="isActive" class="required">
                                <option selected="selected" value="true">True</option>
                                <option value="false">False</option>
                            </select>
                            <div class="clearfix"></div>
                        </div>
                        <button type="button" class="btn btn-default" id="edit-category">Submit</button>
                        <a href="/categories/list" title="Cancel" class="btn btn-default">Cancel</a>
                        <div class="image-preview" style="display:block">                            
                            <img src="/uploads/{{category.imageUrl}}"/>
                        </div> 
                    </form>
                    
                    
                </div>                
            </div>
        </div>
    </div>
</div>
