<div class="edit-form-container">
    <div class="row">
        <div class="col-md-12">
            <div class="item-container">
                <div class="data-form">
                    <div class="form-heading">
                        <h2>Add New Facility</h2>
                    </div>
                    
                    <form role="form" id="add-facility-form">
                        <input type="hidden" name="id" value="{{productId}}"/>
                        <div class="form-group">
                            <label for="">Facility Type:</label>
                            <input type="textbox" name="facilityType" class="form-control required" placeholder="Facility Type"/>
                            <div class="clearfix"></div>
                        </div>
                        <div class="form-group">
                            <label for="">Facility Description:</label>
                            <input type="textbox" name="facilityDescription" class="form-control required" placeholder="Facility Description"/>
                            <div class="clearfix"></div>
                        </div>

                        <button type="button" class="btn btn-default" id="add-facility">Submit</button>
                        <a href="/products/product/{{productId}}" title="Cancel" class="btn btn-default">Cancel</a>
                     </form>
                </div>
            </div>
        </div>
    </div>
</div>
