<div class="edit-form-container">
    <div class="row">
        <div class="col-md-12">
            <div class="item-container">
                <div class="data-form">
                    <div class="form-heading">
                        <h2>Update Tax Type</h2>
                    </div>

                    <form role="form" id="edit-tax-type-form">
                        <input type="hidden" name="id" value="{{taxTypeById._id}}"/>
                        <div class="form-group">
                            <label for="">Tax Type:</label>
                            <input type="textbox" name="taxType" class="form-control required" value="{{taxTypeById.taxType}}" placeholder="Tax Type"/>
                            <div class="clearfix"></div>
                        </div>
                        <div class="form-group">
                            <label for="">Tax Type Description:</label>
                            <input type="textbox" name="taxDescription" class="form-control required" value="{{taxTypeById.taxDescription}}"placeholder="Tax Type Description"/>
                            <div class="clearfix"></div>
                        </div>
                        <div class="form-group">
                            <label for="">Activate:</label>
                            <select name="isActive" class="required form-control">
                                <option selected="selected" value="true">True</option>
                                <option value="false">False</option>
                            </select>
                            <div class="clearfix"></div>
                        </div>
                        <button type="button" class="btn btn-default" id="edit-taxType">Submit</button>
                        <a href="/taxtypes/all" title="Cancel" class="btn btn-default">Cancel</a>
                     </form>                    
                    
                </div>
            </div>
        </div>
    </div>
</div>
